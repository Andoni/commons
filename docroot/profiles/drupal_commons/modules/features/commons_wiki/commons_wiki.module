<?php

include_once('commons_wiki.features.inc');

/**
 * Implementation of hook_views_pre_view()
 */
function commons_wiki_views_pre_view(&$view, &$display_id, &$args) {
  switch ($view->name) {
    case 'og_tab_wikis':
    case 'content_global_wikis':
      $view->display_handler->override_option('header', commons_core_node_add_link('wiki'));
      break;
  }
}

/**
 * Implementation of hook_og_features_registry()
 */
function commons_wiki_og_features_registry() {
  $registry = array();
  
  // Feature: commons_wiki
  $feature = new stdClass;
  $feature->id = 'commons_wiki';
  $feature->name = t('Wiki');
  $feature->description = t('Add wiki posts which any member can edit');
  $feature->components = array(
    'views' => array(
      'group_tab_wikis',
    ),
    'node' => array(
      'wiki',
    ),
    'context' => array(
      'context_ui-group-group-tab-wikis',
    ),
  );
  $registry[$feature->id] = $feature;
  
  return $registry;
}
