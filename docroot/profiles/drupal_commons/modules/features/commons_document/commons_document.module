<?php

include_once('commons_document.features.inc');

/**
 * Implementation of hook_views_pre_view()
 */
function commons_document_views_pre_view(&$view, &$display_id, &$args) {
  switch ($view->name) {
    case 'content_global_documents':
      $view->display_handler->override_option('header', commons_core_node_add_link('document'));
      break;
  }
}

/**
 * Implementation of hook_og_features_registry()
 */
function commons_document_og_features_registry() {
  $registry = array();
  
  // Feature: commons_document
  $feature = new stdClass;
  $feature->id = 'commons_document';
  $feature->name = t('Documents');
  $feature->description = t('Create document content inside your group');
  $feature->components = array(
    'views' => array(
      'group_tab_documents',
    ),
    'node' => array(
      'document',
    ),
    'context' => array(
      'group-home-documents',
      'group-tab-documents',
      'group-document-node',
    ),
  );
  $registry[$feature->id] = $feature;
  
  return $registry;
}
